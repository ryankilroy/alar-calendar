= form_for @event do |f|
  - if @event.errors.any?
    #error_explanation
      h2 = "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      ul
        - @event.errors.full_messages.each do |message|
          li = message

  .field
    = f.label :day
    = f.number_field :day, value: params['day']
  .field
    = f.label :month
    = f.number_field :month, value: params['month']
  .field
    = f.label :year
    = f.number_field :year, value: params['year']
  .field
    = f.label :content
    = f.text_area :content
  .actions = f.submit
