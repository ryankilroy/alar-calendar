<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :day %>
    <%= form.number_field :day, id: :event_day %>
  </div>

  <div class="field">
    <%= form.label :month %>
    <%= form.number_field :month, id: :event_month %>
  </div>

  <div class="field">
    <%= form.label :year %>
    <%= form.number_field :year, id: :event_year %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content, id: :event_content %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
